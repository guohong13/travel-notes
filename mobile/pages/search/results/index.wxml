<view class="results-container">
  <block wx:if="{{results.length}}">
    <block wx:for="{{results}}" wx:key="id">
      <view class="note-card" bindtap="goToDetail" data-id="{{item.id}}">
        <image class="cover" src="{{item.cover}}" mode="aspectFill"></image>
        <view class="info">
          <view class="title">{{item.title}}</view>
          <view class="author">作者：{{item.author}}</view>
          <view class="desc">{{item.desc}}</view>
        </view>
      </view>
    </block>
  </block>
  <block wx:else>
    <view class="empty">暂无相关游记</view>
  </block>
</view> 