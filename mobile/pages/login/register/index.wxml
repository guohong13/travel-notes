<view class="register-container">
  <view class="avatar-section">
    <image class="avatar" src="{{avatarUrl || '/static/avatar1.png'}}" mode="aspectFill"></image>
    <view class="upload-btn" bindtap="chooseAvatar">更换头像</view>
  </view>

  <view class="input-section">
    <view class="input-item">
      <input type="text" placeholder="请输入用户名" model:value="{{username}}" />
    </view>
    <view class="input-item">
      <input type="text" placeholder="请输入昵称" model:value="{{nickname}}" />
    </view>
    <view class="input-item">
      <input type="password" placeholder="请输入密码" model:value="{{password}}" />
    </view>
    <view class="input-item">
      <input type="password" placeholder="请确认密码" model:value="{{confirmPassword}}" />
    </view>
  </view>

  <view class="btn-section">
    <button class="register-btn" bindtap="handleRegister" style="width: 225rpx; height: 97rpx; display: block; box-sizing: border-box; left: -8rpx; top: 0rpx">注册</button>
  </view>
</view> 