<t-navbar left-arrow title="用户注册"/>
<view class="register-container">
  <view class="avatar-section">
    <image class="avatar" src="{{avatarUrl || '/static/avatar1.png'}}" mode="aspectFill"></image>
    <view class="upload-btn" bindtap="chooseAvatar">更换头像</view>
  </view>

  <view class="input-section">
    <view class="input-item">
      <t-input label="用户名" type="text" placeholder="请输入用户名" model:value="{{username}}" />
      <t-input label="用户昵称" type="text" placeholder="请输入用户昵称" model:value="{{username}}" />
      <t-input label="密码" type="password" placeholder="请输入密码" model:value="{{password}}" />
      <t-input label="确认密码" type="password" placeholder="请确认密码" model:value="{{confirmPassword}}" />
    </view>
  </view>

  <view class="btn-section">
    <t-button class="register-btn" bindtap="handleRegister" style="width: 225rpx; height: 97rpx; display: block; box-sizing: border-box; left: -8rpx; top: 0rpx">注册</t-button>
  </view>
</view> 